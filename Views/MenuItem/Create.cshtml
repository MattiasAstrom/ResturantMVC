@using ResturantMVC.ViewModels
@model CreateMenuItemVM

<h2>Create Menu Item</h2>

<form method="post" asp-action="Create">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" />
        <span asp-validation-for="ImageUrl"></span>
    </div>

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>

    <div>
        <label asp-for="IsPopular"></label>
        <input asp-for="IsPopular" type="checkbox" />
    </div>

    <button type="submit">Create</button>
</form>
